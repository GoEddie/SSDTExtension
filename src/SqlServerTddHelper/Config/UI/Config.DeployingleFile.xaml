<UserControl x:Class="GoEddieUk.SqlServerTddHelper.Config.UI.ConfigDeploySingleFile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	>

    <Grid>
        <StackPanel>
            <Label>Connection String:</Label>
            <TextBox x:Name="connection_string_textbox" Margin="10"></TextBox>
            <Label FontSize="10" Margin="5">This is used to deploy files, this should be your test database</Label>
            <Label></Label>
            <Label></Label>
            <Label>Use configured values for sql cmd's:</Label>
            <CheckBox x:Name="use_configured_values_for_sql_cmd_checkbox"  Margin="10"></CheckBox>
            <Label FontSize="10" Margin="5">If the file to deploy has and ($XX) sql cmd variables then the value that has been configured is used. TODO: give option to override specific variables for each project</Label>
        </StackPanel>
    </Grid>
</UserControl>
